# Application
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql+psycopg2://tutorflow:tutorflow@localhost:5432/tutorflow

# JWT
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_MIN_32_CHARS!
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Kakao OAuth
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_REDIRECT_URI=http://localhost:8000/api/v1/auth/kakao/callback

# Toss Payments
TOSS_PAYMENTS_API_KEY=your_toss_api_key
TOSS_PAYMENTS_SECRET_KEY=your_toss_secret_key
TOSS_PAYMENTS_API_URL=https://api.tosspayments.com/v1
TOSS_PAYMENTS_FEE_RATE=0.05

# Kakao Alimtalk
KAKAO_ALIMTalk_API_KEY=your_alimtalk_api_key
KAKAO_ALIMTalk_SENDER=TutorFlow

# Alimtalk Template Codes (obtained from Kakao Alimtalk console)
KAKAO_ALIMTalk_TEMPLATE_SESSION_REMINDER=your_session_reminder_template_code
KAKAO_ALIMTalk_TEMPLATE_ATTENDANCE_CHECK=your_attendance_check_template_code

# Batch Job Settings
BATCH_JOBS_ENABLED=true
BATCH_TIMEZONE=Asia/Seoul
BATCH_AUTO_ATTENDANCE_SCHEDULE=59 23 * * *
BATCH_ATTENDANCE_REMINDER_SCHEDULE=0 12 * * *
BATCH_SESSION_REMINDER_SCHEDULE=0 9 * * *
